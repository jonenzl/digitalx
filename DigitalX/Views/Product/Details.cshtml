@model DigitalX.ServiceReference1.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.ProductName)</h4>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);   
            }
            <img src="@imgsrc" style="max-height:400px" />
        </div>
        <div class="col-sm-10">
            <dl class="dl-horizontal">

                <dt>
                    Name
                    @*@Html.DisplayNameFor(model => model.ProductName)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>
                    Description
                    @*@Html.DisplayNameFor(model => model.ProductDescription)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    Units in Stock
                    @*@Html.DisplayNameFor(model => model.UnitsInStock)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UnitsInStock)
                </dd>

            </dl>
        </div>
    </div>
</div>
<hr />
<p>
    <a href="@Url.Action("AddToCart", "Product", new { id = Model.ProductID })" class="btn btn-primary btn-sm">Add to Cart</a>
    <a href="@Url.Action("Index", "Product", new { id = Model.ProductID })" class="btn btn-primary btn-sm">Back to List</a>
</p>
